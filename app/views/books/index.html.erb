<% if @book.errors.any? %>
  <h4><%= @book.errors.count %>errors prohibited this obj from being saved:</h4>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>User info</h2>
<%= image_tag current_user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr>
        <th><p>name</p></th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th><p>introduction</p></th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>

<h2>New book</h2>

<%= form_with model: @book do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>
<br>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
        <td><%= link_to book.title , book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
