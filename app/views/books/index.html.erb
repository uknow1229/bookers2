<h2>User info</h2>
<%= image_tag current_user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr>
        <th><p>name</p></th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th><p>introduction</p></th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>

<h2>New book</h2>
<%= form_with model: @books do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>
<br>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Users</h2>
<table>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.profile_image %></td>
      <td><%= user.name %></td>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <% end %>
</table>
