<div class="container px-5 px-sm-0">
  <%= flash[:notice] %>
    <div class="error_message">
      <% if @book.errors.any? %>
        <h4><%= @book.errors.count %>errors prohibited this obj from being saved:</h4>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

<div class="row">
  <div class="col-md-3">
    <%= render partial: "partial/user_info", locals: { user: current_user }%>
    <%= render partial: "partial/new_books", locals: { book: @book } %>
  </div>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(50, 50) %>
              <% end %>
            </td>
            <td><%= link_to book.title , book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td><%= render "favorites/show" , book: book %></td>
            <td><p>コメント件数:<%= book.post_comments.count %></p></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
