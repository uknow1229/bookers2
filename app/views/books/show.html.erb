<div class="container px-5 px-sm-0">
  <%= flash[:notice] %>
    <div class="row">
      <div class="col-md-3">
        <%= render partial: "partial/user_info", locals: { user: @user }%>
        <%= render partial: "partial/new_books", locals: { book: @book } %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
            <table class="table">
              <tbody>
                <tr>
                  <td>
                    <%= link_to user_path(@user) do %>
                      <%= image_tag @user.get_profile_image(100, 100) %><br>
                      <%= @user.name %>
                    <% end %>
                  </td>
                  <td><%= link_to @book.title , book_path(@book) %></td>
                  <td><%= @book.body %></td>
                    <% if @book.user == current_user %>
                  <td><%= render "favorites/show" , book: @book %></td>
                  <td><p>コメント件数:<%= @book.post_comments.count %></p></td>
                  <td><%= link_to "Edit", edit_book_path(@book) , class: "btn btn-sm btn-success edit_book_72734" %></td>
                  <td><%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger destroy_book_72734", method: :delete, data: { confirm: "本当に消しますか？" } %></td>
                    <% end %>
                </tr>
              </tbody>
            </table>
          <%= render "post_comments/show" , { book: @book , post_comment: @post_comment } %><br>
          
          <%= render "post_comments/info" , { book: @book , post_comment: @post_comment } %>
          
      </div>
    </div>
</div>