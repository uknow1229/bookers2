<!DOCTYPE html>

<html class="fontawesome-i2svg-active fontawesome-i2svg-complete">
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm bg-dark text-white mb-3">
      <nav class= "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li>
                  <%= link_to user_path(current_user), class: "nav-link text-light" do %>
                    <svg class="fas fa-home"></svg>
                    Home
                  <% end %>
                </li>
                <li>
                  <%= link_to users_path, class: "nav-link text-light" do %>
                    <svg class="fas fa-users"></svg>
                    Users
                  <% end %>
                </li>
                <li>
                  <%= link_to books_path, class: "nav-link text-light" do %>
                    <svg class="fas fa-book-open"></svg>
                    Books
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, class: "nav-link text-light", method: :delete do %>
                    <svg class="fas fa-sign-out-alt"></svg>
                    Log out
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to root_path, class: "nav-link text-light" do %>
                    <svg class="fas fa-home"></svg>
                    Home
                  <% end %>
                </li>
                <li>
                  <%= link_to home_about_path, class: "nav-link text-light" do %>
                    <svg class="fas fa-link"></svg>
                    About
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                    <svg class="fas fa-user-plus"></svg>
                    Sign up
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                    <svg class="fas fa-sign-in-alt"></svg>
                    Log in
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="container">
      <div class="row d-flex">
        <div class="mb-3 mr-3">
          <%= render 'partial/search' %>
          </div>
          <div>
          <% if user_signed_in? %>
            <%= render 'tagsearches/tagsearch' %>
          <% end %>
        </div>
        
        
</div>
      </div>
    <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
