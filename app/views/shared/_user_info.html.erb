<h2>User info</h2>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <table class="table">
    <tbody>
      <tr>
        <th><p>name</p></th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th><p>introduction</p></th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <div class="btn btn-outline-secondary btn-block edit_user_95666">
      <%= link_to content_tag(:i, "", class: "fa fa-user-cog fa-w-20") + "", edit_user_path(current_user),  style: "text-decoration:none; color:#6c757d;" %>
    </div>
  </div>

