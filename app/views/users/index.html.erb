<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "partial/user_info", locals: { user: current_user }%>
      
      <%= render partial: "partial/user_edit", locals: { user: current_user }%>
      <%= render partial: "partial/new_books", locals: { book: @book } %>
    </div>

<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(50, 50) %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show' , user_path(user.id) %></td>
          <td>フォロー<%= user.follower.count %></td>
          <td>フォロワー<%= user.followed.count %></td>
          <td>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-danger" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-success" %>
            <% end %>
          <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>