
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(50,50) %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show' , user_path(user.id) %></td>
          <td>フォロー<%= user.follower.count %></td>
          <td>フォロワー<%= user.followed.count %></td>
          <% end %>
          <td><%= render partial: "relationships/follow_btn", locals: { user: current_user } %></td>
          
          </tr>
      </tbody>
    </table>

