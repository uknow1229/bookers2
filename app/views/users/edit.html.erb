<h1>User info</h1>
<% if @user.errors.any? %>
  <h4><%= @user.errors.count %>error prohibited this obj from being saved:</h4>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>

  <p>Name</p>
  <%= f.text_field :name %>

  <p>Image</p>
  <%= f.file_field :profile_image, accept: "image/*" %>

  <p>Introduction</p>
  <%= f.text_area :introduction %>

<br>
  <%= f.submit 'Update User' %>
<% end %>

