<%= flash[:notice] %>

<%= render 'shared/user_info' %>

<h2>New book</h2>
<%= form_with model: @book_new do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>
<br>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |books| %>
      <tr>
        <td><%= image_tag @user.get_profile_image(100, 100) %></td>
        <td><%= link_to books.title , book_path(books.id) %></td>
        <td><%= books.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
