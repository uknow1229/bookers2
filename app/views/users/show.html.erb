<% flash.each do |message_type, message| %>
<% pp message %>
  <%= content_tag :div, message, class: message_type %>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "partial/user_info", locals: { user: @user }%>
      <%= render partial: "partial/new_books", locals: { book: @book } %>
    </div>

  <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(100, 100) %></td>
              <td><%= link_to books.title , book_path(books.id) %></td>
              <td><%= books.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>